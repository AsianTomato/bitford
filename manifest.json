{
    "manifest_version": 2,

    "name": "Bitford",
    "description": "BitTorrent client",
    "version": "0.0",

    "permissions": [
	{
	    "socket": ["tcp-connect:*:*", "tcp-listen::*"]
	},
	"storage",
	"unlimitedStorage",
	"fileSystem",
	"fileSystem.write",
	"http://*/*"
    ],
    "app": {
	"background": {
	    "scripts": [
		"background.js"
	    ],
	    "persistent": false
	}
    },
    "file_handlers": {
	"any": {
	    "title": "Start BitTorrent download",
	    "types": ["application/x-bittorrent"],
	    "extensions": ["torrent"]
	}
    },
    "intents": {
        "http://webintents.org/view" : [{
            "title" : "Start BitTorrent download",
            "type" : ["application/x-bittorrent"]
        }]
    },
    "icons": {
	"128": "icon128.png",
	"48": "icon48.png"
    }
}
